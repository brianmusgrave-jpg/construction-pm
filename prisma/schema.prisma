generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ── Auth Models (NextAuth) ──

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ── Core Models ──

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  name          String?
  phone         String?
  company       String?
  image         String?
  role          UserRole  @default(VIEWER)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts       Account[]
  sessions       Session[]
  projectMembers ProjectMember[]
  notifications  Notification[]
  documents      Document[]       @relation("uploaded_documents")
  photos         Photo[]
  flaggedPhotos  Photo[]          @relation("flagged_photos")
  checklistItems ChecklistItem[]  @relation("completed_by")
  staffCreated   Staff[]          @relation("staff_created_by")
  activityLogs   ActivityLog[]

  @@map("users")
}

enum UserRole {
  ADMIN
  PROJECT_MANAGER
  CONTRACTOR
  STAKEHOLDER
  VIEWER
}

model Project {
  id            String        @id @default(cuid())
  name          String
  description   String?       @db.Text
  address       String?
  status        ProjectStatus @default(PLANNING)
  planApproval  DateTime?     @map("plan_approval")
  estCompletion DateTime?     @map("est_completion")
  budget        Decimal?      @db.Decimal(12, 2)
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  members      ProjectMember[]
  phases       Phase[]
  invitations  Invitation[]
  activityLogs ActivityLog[]

  @@map("projects")
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  ON_HOLD
  COMPLETED
  ARCHIVED
}

model ProjectMember {
  id        String     @id @default(cuid())
  role      MemberRole @default(VIEWER)
  joinedAt  DateTime   @default(now()) @map("joined_at")

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String  @map("user_id")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @map("project_id")

  @@unique([userId, projectId])
  @@map("project_members")
}

enum MemberRole {
  OWNER
  MANAGER
  CONTRACTOR
  STAKEHOLDER
  VIEWER
}

// ── Timeline / Phases ──

model Phase {
  id          String      @id @default(cuid())
  name        String
  detail      String?
  sortOrder   Int         @default(0) @map("sort_order")
  isMilestone Boolean     @default(false) @map("is_milestone")
  status      PhaseStatus @default(PENDING)
  progress    Int         @default(0) // 0-100

  estStart    DateTime  @map("est_start")
  estEnd      DateTime  @map("est_end")
  worstStart  DateTime? @map("worst_start")
  worstEnd    DateTime? @map("worst_end")
  actualStart DateTime? @map("actual_start")
  actualEnd   DateTime? @map("actual_end")

  // Budget tracking
  estimatedCost Decimal? @map("estimated_cost") @db.Decimal(12, 2)
  actualCost    Decimal? @map("actual_cost") @db.Decimal(12, 2)

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @map("project_id")

  assignments PhaseAssignment[]
  checklist   Checklist?
  documents   Document[]
  photos      Photo[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([projectId, sortOrder])
  @@map("phases")
}

enum PhaseStatus {
  PENDING
  IN_PROGRESS
  REVIEW_REQUESTED
  UNDER_REVIEW
  COMPLETE
}

// ── Directory & Assignments ──

model Staff {
  id          String      @id @default(cuid())
  name        String
  company     String?
  role        String?     // "Electrician", "Plumber", "Inspector", etc.
  contactType ContactType @default(SUBCONTRACTOR) @map("contact_type")
  email       String?
  phone       String?
  notes       String?     @db.Text

  createdBy   User?   @relation("staff_created_by", fields: [createdById], references: [id])
  createdById String? @map("created_by_id")

  assignments PhaseAssignment[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("staff")
}

enum ContactType {
  TEAM
  SUBCONTRACTOR
  VENDOR
  INSPECTOR
}

model PhaseAssignment {
  id      String  @id @default(cuid())
  isOwner Boolean @default(false) @map("is_owner")

  phase   Phase  @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  phaseId String @map("phase_id")
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)
  staffId String @map("staff_id")

  assignedAt DateTime @default(now()) @map("assigned_at")

  @@unique([phaseId, staffId])
  @@map("phase_assignments")
}

// ── Checklists ──

model ChecklistTemplate {
  id    String @id @default(cuid())
  name  String // "Site Work", "Permitting", etc.
  items ChecklistTemplateItem[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("checklist_templates")
}

model ChecklistTemplateItem {
  id       String @id @default(cuid())
  title    String
  order    Int    @default(0)

  template   ChecklistTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  templateId String            @map("template_id")

  @@index([templateId, order])
  @@map("checklist_template_items")
}

model Checklist {
  id    String          @id @default(cuid())
  items ChecklistItem[]

  phase   Phase  @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  phaseId String @unique @map("phase_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("checklists")
}

model ChecklistItem {
  id          String    @id @default(cuid())
  title       String
  order       Int       @default(0)
  completed   Boolean   @default(false)
  completedAt DateTime? @map("completed_at")

  completedBy   User?   @relation("completed_by", fields: [completedById], references: [id])
  completedById String? @map("completed_by_id")

  checklist   Checklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)
  checklistId String    @map("checklist_id")

  @@index([checklistId, order])
  @@map("checklist_items")
}

// ── Documents ──

model Document {
  id            String    @id @default(cuid())
  name          String
  url           String
  size          Int // bytes
  mimeType      String    @map("mime_type")
  category      DocCategory
  status        DocStatus @default(PENDING)
  version       Int       @default(1)
  notes         String?   @db.Text
  extractedData Json?     @map("extracted_data") // AI analysis results

  phase   Phase  @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  phaseId String @map("phase_id")

  uploadedBy   User   @relation("uploaded_documents", fields: [uploadedById], references: [id])
  uploadedById String @map("uploaded_by_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([phaseId, category])
  @@map("documents")
}

enum DocCategory {
  PERMIT
  CONTRACT
  INVOICE
  BLUEPRINT
  INSPECTION
  OTHER
}

enum DocStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}

// ── Photos ──

model Photo {
  id      String  @id @default(cuid())
  url     String
  caption String?
  takenAt DateTime @default(now()) @map("taken_at")

  // Flagging for followup
  flagType    PhotoFlagType? @map("flag_type")
  flagNote    String?        @map("flag_note") @db.Text
  flaggedBy   User?          @relation("flagged_photos", fields: [flaggedById], references: [id])
  flaggedById String?        @map("flagged_by_id")
  flaggedAt   DateTime?      @map("flagged_at")

  phase   Phase  @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  phaseId String @map("phase_id")

  uploadedBy   User   @relation(fields: [uploadedById], references: [id])
  uploadedById String @map("uploaded_by_id")

  @@index([phaseId])
  @@map("photos")
}

enum PhotoFlagType {
  REPLACEMENT_NEEDED
  ADDITIONAL_ANGLES
  ADDITIONAL_PHOTOS
  CLARIFICATION_NEEDED
}

// ── Notifications ──

model Notification {
  id      String           @id @default(cuid())
  type    NotificationType
  title   String
  message String
  read    Boolean          @default(false)
  data    Json? // Flexible metadata (projectId, phaseId, etc.)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId, read])
  @@map("notifications")
}

enum NotificationType {
  PHASE_STATUS_CHANGED
  CHECKLIST_COMPLETED
  DOCUMENT_UPLOADED
  DOCUMENT_STATUS_CHANGED
  PHOTO_UPLOADED
  REVIEW_REQUESTED
  REVIEW_COMPLETED
  TIMELINE_SHIFTED
  MEMBER_INVITED
}

// ── Activity Log ──

model ActivityLog {
  id        String       @id @default(cuid())
  action    ActivityType
  message   String
  data      Json?        // Flexible metadata (phaseId, staffId, oldStatus, newStatus, etc.)

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @map("project_id")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([projectId, createdAt])
  @@index([userId, createdAt])
  @@map("activity_logs")
}

enum ActivityType {
  PHASE_CREATED
  PHASE_STATUS_CHANGED
  PHASE_DATES_CHANGED
  STAFF_ASSIGNED
  STAFF_UNASSIGNED
  CHECKLIST_APPLIED
  CHECKLIST_ITEM_TOGGLED
  DOCUMENT_UPLOADED
  DOCUMENT_STATUS_CHANGED
  PHOTO_UPLOADED
  PROJECT_CREATED
  PROJECT_STATUS_CHANGED
  MEMBER_INVITED
}

// ── Organization Settings (Theming) ──

model OrgSettings {
  id           String   @id @default(cuid())
  theme        String   @default("blue")
  logoUrl      String?  @map("logo_url")
  logoMimeType String?  @map("logo_mime_type")
  companyName  String?  @map("company_name")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("org_settings")
}

// ── Invitations ──

model Invitation {
  id        String     @id @default(cuid())
  email     String
  token     String     @unique
  role      MemberRole @default(CONTRACTOR)
  expiresAt DateTime   @map("expires_at")

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @map("project_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("invitations")
}
