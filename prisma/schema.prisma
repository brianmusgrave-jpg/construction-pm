// ── RFIs (Sprint AB #57) ──

model RFI {
  id          String    @id @default(cuid())
  rfiNumber   Int       @map("rfi_number")
  subject     String
  question    String    @db.Text
  answer      String?   @db.Text
  status      RFIStatus @default(OPEN)
